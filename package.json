{
    "name": "zenstack-todo-sample-nextjs-tanstack",
    "version": "1.0.0",
    "private": true,
    "type": "module",
    "scripts": {
        "dev": "next dev",
        "build": "npm run generate && next build",
        "start": "next start",
        "db:push": "zen db push",
        "db:migrate": "zen migrate dev",
        "db:deploy": "zen migrate deploy",
        "db:reset": "zen migrate reset",
        "generate": "zen generate --lite",
        "vercel-build": "npm run build && npm run db:deploy",
        "package-clean": "npm rm zenstack @zenstackhq/orm @zenstackhq/server @zenstackhq/tanstack-query @zenstackhq/plugin-policy",
        "up": "npm run package-clean && npm install -D @zenstackhq/cli@latest && npm install @zenstackhq/orm@latest @zenstackhq/server@latest @zenstackhq/tanstack-query@latest @zenstackhq/plugin-policy@latest",
        "up-preview": "npm run package-clean && npm install --registry https://preview.registry.zenstack.dev -D @zenstackhq/cli@latest && npm install --registry https://preview.registry.zenstack.dev @zenstackhq/orm@latest @zenstackhq/server@latest @zenstackhq/tanstack-query@latest @zenstackhq/plugin-policy@latest"
    },
    "dependencies": {
        "@auth/prisma-adapter": "^2.7.4",
        "@heroicons/react": "^2.0.12",
        "@tanstack/react-query": "^5.90.5",
        "@tanstack/react-query-devtools": "^5.90.2",
        "@zenstackhq/orm": "^3.1.0",
        "@zenstackhq/plugin-policy": "^3.1.0",
        "@zenstackhq/server": "^3.1.0",
        "@zenstackhq/tanstack-query": "^3.1.0",
        "babel-plugin-superjson-next": "^0.4.5",
        "bcryptjs": "^2.4.3",
        "daisyui": "^4.0.7",
        "decimal.js": "^10.4.3",
        "moment": "^2.29.4",
        "nanoid": "^4.0.0",
        "next": "^15.5.9",
        "next-auth": "^5.0.0-beta.25",
        "pg": "^8.16.3",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-toastify": "^10.0.6",
        "superjson": "^1.12.0"
    },
    "devDependencies": {
        "@tailwindcss/line-clamp": "^0.4.2",
        "@types/bcryptjs": "^2.4.2",
        "@types/node": "18.19.130",
        "@types/pg": "^8.15.6",
        "@types/react": "18.3.26",
        "@types/react-dom": "^18.2.0",
        "@typescript-eslint/eslint-plugin": "^6.13.1",
        "@typescript-eslint/parser": "^6.13.1",
        "@zenstackhq/cli": "^3.1.0",
        "autoprefixer": "^10.4.20",
        "eslint": "^7.32.0",
        "eslint-config-next": "12.3.1",
        "lower-case-first": "^2.0.2",
        "postcss": "^8.4.49",
        "tailwindcss": "^3.4.16",
        "typescript": "5.9.3"
    }
